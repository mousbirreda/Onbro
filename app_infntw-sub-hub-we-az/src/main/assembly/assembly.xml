<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.6"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.6 http://maven.apache.org/xsd/assembly-2.6.xsd">
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/templates/</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>*</include>
			</includes> 
			<excludes>
			</excludes> 
		</fileSet>
	</fileSets>
</assembly>